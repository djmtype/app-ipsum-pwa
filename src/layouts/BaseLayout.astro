---

import BaseHeader from "@components/BaseHeader.astro"
import BaseMeta from "@components/BaseMeta.astro"

export interface Props {
	title: string
	description: any
	image?: string
	bodyClass?: string
	indexPage?: boolean
}

const { title, description, image, bodyClass, indexPage } = Astro.props as Props
---

<!DOCTYPE html>
<html lang='en' dir='ltr' class='no-js'>
	<head>
		<BaseMeta title={title} description={description} image={image} robots={indexPage} />



	</head>
	<body class={bodyClass}>
		<BaseHeader />

		<main id='swup' class='transition-fade section'>
			<slot />
		</main>
	</body>
	<script>
		import "@scripts/app.js"
	</script>
</html>


<style is:global>
	.transition-fade {
	transition-duration: 400ms;
	transition-timing-function: cubic-bezier(0.445, 0.05, 0.55, 0.95);
	transition-property: all;
  opacity: 1;
	transform: scale(1);
}

html.is-animating .transition-fade {
  opacity: 0;
	transform: scale(.98);
}
</style>